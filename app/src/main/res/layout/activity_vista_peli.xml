<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vista_peli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sejo.navdra.vistaPeli">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titol"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Títol"
            />
        <TextView
            android:id="@+id/tEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="Títol"
            android:inputType="none"
            android:textSize="25dp"
            android:textAlignment="textEnd"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pais"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pais"
            android:paddingTop="20dp"/>
        <TextView
            android:id="@+id/Pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="Pais"
            android:inputType="none"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:textAlignment="textEnd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/any"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any"
            android:paddingTop="20dp"/>
        <TextView
            android:id="@+id/Any"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="Any"
            android:inputType="none"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:textAlignment="textEnd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/director"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Director"
            android:paddingTop="20dp"/>
        <TextView
            android:id="@+id/Director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="Director"
            android:inputType="none"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:textAlignment="textEnd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prot"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Protagonista"
            android:paddingTop="20dp"/>
        <TextView
            android:id="@+id/Protagonista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="Protagonista"
            android:inputType="none"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:textAlignment="textEnd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota de la Crítica" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp">

            <RatingBar
                android:id="@+id/nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numStars="5"/>

            <TextView
                android:text="Nota"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/nota_num"
                android:layout_weight="5"
                android:textSize="25dp"
                android:textAlignment="textEnd"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esborrar"
            android:id="@+id/Boto"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</LinearLayout>
